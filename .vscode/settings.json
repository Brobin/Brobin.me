{
    "python.linting.pylintEnabled": false,
    "python.pythonPath": "./venv/bin/python3.6",
    "editor.codeActionsOnSave": {
        "source.fixAll": true
    },
    "editor.formatOnSave": true,
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.exclude": {
        "**/__pycache__": true,
        "**/node_modules": true,
        "**/build": true,
    },
    "[javascript]": {
        "editor.tabSize": 2,
    },
    "[typescript]": {
        "editor.tabSize": 2,
    },
    "[python]": {
        "editor.tabSize": 4
    }
}
